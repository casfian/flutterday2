//main.dart
//make sure you have added "http" dependency at pubspec.yaml

import 'dart:convert';
import 'dart:io';

import 'package:flutter/material.dart';
import 'package:http/http.dart' as http;

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  //function
  //basic Auth
  Future<String> getPost() async {
    var url = 'http://yourwebsite.com/index.php';
    String username = 'test';
    String password = '123Â£';
    String basicAuth =
        'Basic ' + base64Encode(utf8.encode('$username:$password'));
    print(basicAuth);

    var response = await http.post(
      url,
      headers: <String, String>{'authorization': basicAuth},
      body: {'user': 'caspian', 'password': '123456'},
    );
    
    var data = jsonEncode(response);

    return data;
  }

  //function
  //Guna API Key
  Future<String> getPost2() async {
    var url = 'http://yourwebsite.com/index.php';
    
    var response = await http.post(url, headers: {
      HttpHeaders.authorizationHeader:
          'xxxxxxx'
    });
     var data = json.decode(response.body);

    return data;
  }

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Material App',
      home: Scaffold(
        appBar: AppBar(
          title: Text('Material App Bar'),
        ),
        body: Center(
          child: Container(
            child: RaisedButton(
              child: Text('Submit Data'),
              onPressed: () async {
                getPost();
              },
            ),
          ),
        ),
      ),
    );
  }
}
